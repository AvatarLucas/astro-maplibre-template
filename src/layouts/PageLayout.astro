---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <style>
      @font-face {
          font-family: 'Baskerville Old Face';
          src: url('/astro-maplibre-template/fonts/BASKVILL.woff2') format('truetype');
          font-weight: normal;
          font-style: normal;
      }
  
      h1, h2, h3, h4, h5 {
          font-family: 'Baskerville Old Face', serif !important;
      }
  </style>

    <Head title={`${title} | ${SITE.NAME}`} description={description} />
    <script data-astro-rerun src="https://unpkg.com/maplibre-gl@^4.7.1/dist/maplibre-gl.js"></script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
